@model IEnumerable<BO.Pizza>

<h2>Liste des pizzas</h2>

<p>@Html.ActionLink("Ajouter une nouvelle pizza", "Create")</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredients)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @if (item.Pate != null)
            {
                @Html.DisplayFor(model => item.Pate.Nom)
            }
        </td>
        <td>
            @if (item.Ingredients != null)
            {
                foreach (var ingredient in item.Ingredients)
                {
                    @Html.DisplayFor(m => ingredient.Nom)<br />
                }
            }
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Détails", "Details", new { id = item.Id }) |
            @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
